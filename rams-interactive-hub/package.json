{
  "name": "rams-interactive-hub",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/nurdamiron/rams-projects.git"
  },
  "author": "RAMS Global",
  "description": "Interactive presentation hub for RAMS real estate projects",
  "scripts": {
    "dev": "TURBOPACK=0 next dev",
    "build": "next build",
    "start": "next start",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on tcp:3000 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "next build && electron-builder",
    "lint": "eslint"
  },
  "build": {
    "appId": "com.rams.interactivehub",
    "productName": "RAMS Interactive Hub",
    "files": [
      "electron/**/*",
      ".next/**/*",
      "public/*.svg",
      "public/*.png",
      "public/images/brand/**/*",
      "public/fonts/**/*",
      "!public/projects/**/*",
      "package.json",
      "node_modules/next/**/*"
    ],
    "asarUnpack": [
      "**/*.node",
      ".next/**/*",
      "node_modules/next/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "npmRebuild": false,
    "publish": null,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "RAMS Interactive Hub",
      "perMachine": true,
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": true
    },
    "portable": {
      "artifactName": "RAMS-Interactive-Hub-Portable.exe"
    }
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.26.1",
    "lucide-react": "^0.562.0",
    "next": "16.1.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "serialport": "^13.0.0",
    "tailwind-merge": "^3.4.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/serialport": "^8.0.5",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  }
}
