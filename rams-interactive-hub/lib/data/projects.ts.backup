export const getProjectBySlug = (slug: string): Project | undefined => {
  return RAMS_PROJECTS.find((project) => project.slug === slug);
};

export const getProjectById = (id: string): Project | undefined => {
  return RAMS_PROJECTS.find((project) => project.id === id);
};

export const getActiveProjects = (): Project[] => {
  return RAMS_PROJECTS.filter(
    (project) =>
      project.status === "В продаже" || project.status === "Строится"
  );
};

export const getCompletedProjects = (): Project[] => {
  return RAMS_PROJECTS.filter((project) => project.status === "Сдан");
};
